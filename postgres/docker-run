#!/bin/bash

# Simple script to run postgres locally via docker-compose
echo "Starting PostgreSQL development database..."
docker-compose up -d

echo "PostgreSQL is running on localhost:5433"
echo "Database: ask_me_skattabc_dev"
echo "User: postgres"
echo "Password: dev_password"
echo ""
echo "To connect:"
echo "psql -h localhost -p 5433 -U postgres -d ask_me_skattabc_dev"
echo ""
echo "To stop:"
echo "docker-compose down"